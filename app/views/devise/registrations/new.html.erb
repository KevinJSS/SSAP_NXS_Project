<h2 class="mt-4">REGISTRAR <%= @user.role == "admin" ? "USUARIO" : "COLABORADOR" %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label "Nombre completo *" %><br />
    <%= f.text_field :fullname, autofocus: true, placeholder: "Ej: Nombre Apellido1 Apellido2", class: "form-control" %>
  </div>
  
  <div class="field">
    <%= f.label "Número de cédula *" %><br />
    <%= f.text_field :id_card, placeholder: "Ej: 101110111", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label "Número de teléfono *" %><br />
    <%= f.text_field :phone, placeholder: "Ej: (+506) 8888 8888", class: "form-control" %>
  </div>
  
  <div class="field">
    <%= f.label "Correo electrónico *" %><br />
    <%= f.email_field :email, autocomplete: "email", placeholder: "Ej: correo@gmail.com", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label "Puesto de trabajo *" %><br />
    <%= f.text_field :job_position, placeholder: "Ej: Arquitecto", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label "Dirección de habitación *" %><br />
    <%= f.text_area :address, placeholder: "Detalle la ubicación física de domicilio", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label "Rol de usuario *" %><br />
     <%= f.hidden_field :role, value: @user.role == "admin" ? "admin" : "collaborator" %>
    <%= f.select :role, options_for_select([['Colaborador', "collaborator"], ['Administrador', "admin"]], @user.role), {}, class: "form-select", disabled: true %>
  </div>

  <% if @user.role == "collaborator" %>
    <hr>
    <h5>INFORMACIÓN CONTACTO DE EMERGENCIA</h5>
    <!-- Emergency contact fields -->
    <%= f.fields_for :emergency_contact do |contact_form| %>
      <%= contact_form.label "Nombre completo" %>
      <%= contact_form.text_field :fullname, placeholder: "Ej: Nombre Apellido1 Apellido2", class: "form-control" %>
      
      <%= contact_form.label "Número de teléfono" %>
      <%= contact_form.text_field :phone, placeholder: "Ej: (+506) 8686 8686", class: "form-control" %>
    <% end %>
  <% end %>

  <hr>

  <div class="actions mt-3">
    <%= f.submit "Guardar", class: "btn btn-primary" %>
    <%= link_to "Regresar", :back, class: "btn btn-secondary" %>
  </div>
<% end %>