<div id="<%= dom_id activity %>" class="item">
  <div class="item__header">
    <div class="item__heading">
      <h4 class="item__title" class="item__title" data-bs-toggle="tooltip" data-bs-placement="top" title="<%= activity.user.job_position %>"><%= activity.user.fullname %></h4> 
      <p class="item__text"><%= activity.project.name %></p>
    </div>
    <p class="item__status fst-normal"> <%= activity.date.strftime("%A %e, %B %Y") %></p>
  </div>

  <div class="item__content">
    <div class="item__references">
      <div class="item__reference">
        <p class="item__reference-text">
          <%= image_tag('activities-icon.svg', alt: "icono actividades asociadas", class: "item__reference-icon") %>
          <%= activity.phases_activities.count %>
        </p>
        <%# Agregar link para ir a lista de actividades filtradas por este proyecto %>
        <p class="item__reference-label"><%= activity.phases_activities.count == 1 ? "Actividad realizada" : "Actividades realizadas" %></p>
      </div>
      
      <div class="item__reference">
        <p class="item__reference-text">
          <%= image_tag('clock-icon.svg', alt: "icono actividades asociadas", class: "item__reference-icon") %>
          <%= activity.get_total_hours  %>
        </p>
        <%# Agregar link para ir a lista de minutas filtradas por este proyecto %>
        <p class="item__reference-label">Horas trabajadas</p> 
      </div>
    </div>

    <div class="item__actions">
      <%= link_to activity, class: "button-outline-primary" do %>
        <i class="bi bi-eye mx-1"></i>
        <span class="item__actions-text">Ver detalles</span>
      <% end %>
    </div>
  </div>
</div>