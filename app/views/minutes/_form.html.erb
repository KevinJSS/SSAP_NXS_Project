    <%= form.label :start_time, style: "display: block" %>
    <%= form.time_field :start_time %>
  </div>

  <div>
    <%= form.label :end_time, style: "display: block" %>
    <%= form.time_field :end_time %>
  </div>

  <div>
    <%= form.label :meeting_objectives, style: "display: block" %>
    <%= form.text_area :meeting_objectives %>
  </div>

  <div>
    <%= form.label :discussed_topics, style: "display: block" %>
    <%= form.text_area :discussed_topics %>
  </div>

  <div>
    <%= form.label :pending_topics, style: "display: block" %>
    <%= form.text_area :pending_topics %>
  </div>

  <div>
    <%= form.label :agreements, style: "display: block" %>
    <%= form.text_area :agreements %>
  </div>

