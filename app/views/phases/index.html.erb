<main data-view-id="6">
  <div class="header">
      <div class="header__content">
      <div class="header__heading">
        <p class="header__subtitle">GESTIÓN DE ACTIVIDADES</p>
        <h1 class="header__title">LISTA DE FASES</h1>
      </div>
      
      <div class="header__actions">
        <div class="header__actions header__actions--tablet">
          <%= link_to new_phase_path, class: "button-primary" do %>
            <%= image_tag('add-icon.svg', alt: "icono agregar fase", class: "sidebar__icon") %>
            <span class="ms-1">Agregar fase</span>
          <% end %>
        </div>
      
        <%= render 'shared/sidebar_button' %>
      </div>
    </div>

    <div class="header__actions header__actions--phone">
      <%= link_to new_phase_path, class: "button-primary" do %>
        <%= image_tag('add-icon.svg', alt: "icono agregar fase", class: "sidebar__icon") %>
        <span class="ms-1">Agregar fase</span>
      <% end %>
    </div>
  </div>
  
  <%= render 'phase_filters' %>

  <section class="card-list mb-4">
    <div class="d-flex justify-content-between align-items-center" data-controller="filters">
      <h4 class="card-list__title">
        <%= image_tag('card-list-icon.svg', alt: "icon lista de proyectos") %>
        FASES
      </h4>
      <a class="text-danger" id="clear-filters-button" style="display: none; text-decoration: none;" data-action="click->filters#clearFilters">Limpiar filtros &times;</a>
    </div>

    <div id="phases" class="card-list__items">
      <% @phases.each do |phase| %>
        <%= render phase %>
      <% end %>
      <% if !@q.result.any? %>
        <p class="text-center text-black-50 fst-italic my-4"><i class="bi bi-info-circle me-2"></i>Lista de fases vacía</p>
      <% end %>
    </div>

    <% if !@phases.empty? %>
      <div class="card-list__pagination">
        <%= render "shared/pagination_count", object: @phases %>
        <%= will_paginate @phases, inner_window: 1 %>
      </div>
    <% end %>
  </section>
</main>