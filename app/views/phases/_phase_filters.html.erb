<%# Phase Filters Partial %>
<%# The SCSS styles for this view can be found in the app/assets/stylesheets/custom folder. The specific stylesheets for this view are named: _filters and _form %>
<%# The data-controller="filters" is a Stimulus controller located in the app/javascript/controllers folder as filters_controller.js %>
<section class="filters" data-controller="filters">
    <div class="filters__header">
        <a class="filters__toggle" data-action="click->filters#toggle">
            <h4 class="filters__title">
                <%= image_tag("filter-icon.svg", alt: "icono seccion filtros", class: "sidebar__icon") %>FILTROS
            </h4>
            <span id="toggle" data-name="phases"><i class="bi bi-caret-down-fill"></i></span>
        </a>
    </div>

    <div class="filters__content">
        <div class="card card-body border-0 p-0 pt-3">

            <%= search_form_for @q, class: "form" do |f| %>
                <div class="form__flex form__flex--row">
                    <div class="form__field">
                        <%= f.label :code_cont, "Código de fase", class: "form__label" %>
                        <%= f.text_field :code_cont, class: "form__input", placeholder: "Código de fase" %>
                    </div>

                    <div class="form__field">
                        <%= f.label :name_cont, "Nombre de fase", class: "form__label" %>
                        <%= f.text_field :name_cont, class: "form__input", placeholder: "Nombre de fase" %>
                    </div>
                </div>

                <div class="form__action">
                    <button type="submit" class="button-primary">
                        <i class="bi bi-search me-2"></i>
                        Buscar
                    </button>
                </div>
            <% end %>
        </div>
    </div>
</section>