<%# Form Phase Partial %>
<%# The SCSS styles for this view can be found in the app/assets/stylesheets/custom folder. The specific stylesheets for this view are named: _form, _dropdown and _utilities %>

<%# Render phase error messages partial %>
<%= render 'shared/error_message', object: phase %>

<%= form_with(model: phase, class: "form form__flex section-bg") do |form| %>
  <div class="form__field">
    <%= form.label "Código", class: "form__label" %>
    <%= form.text_field :code, class: "form__input", placeholder: "Ejemplo: F1" %>
  </div>

  <div class="form__field">
    <%= form.label "Nombre", class: "form__label" %>
    <%= form.text_field :name, class: "form__input", placeholder: "Ejemplo: Preparación del sitio" %>
  </div>

  <div class="form__flex form__flex--row justify-content-between">
    <div class="form__actions mt-3">
      <%= form.submit phase.new_record? ? "Guardar" : "Actualizar", class: "button-primary" %>
      <%= link_to "Regresar", "#", class: "button-secondary", data: {action: "click->navigation#goBack"} %>
    </div>

    <%# RENDER PHASE CHANGE LOG %>
    <%= render 'shared/change_log', change_log: @phase_change_log, object: @phase %>
  </div>
<% end %>
