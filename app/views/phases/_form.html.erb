<% if phase.errors.any? %>
  <div style="color: red">
    <h2><%= pluralize(phase.errors.count, "error") %> prohibited this phase from being saved:</h2>

    <ul>
      <% phase.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: phase, class: "form form__flex section-bg") do |form| %>
  <div class="form__field">
    <%= form.label "Código", class: "form__label" %>
    <%= form.text_field :code, class: "form__input", placeholder: "Ejemplo: F1" %>
  </div>

  <div class="form__field">
    <%= form.label "Nombre", class: "form__label" %>
    <%= form.text_field :name, class: "form__input", placeholder: "Ejemplo: Preparación del sitio" %>
  </div>

  <div class="form__actions mt-3">
    <%= form.submit phase.new_record? ? "Guardar" : "Actualizar", class: "button-primary" %>
    <%= link_to "Regresar", phases_path, class: "button-secondary" %>
  </div>
<% end %>
