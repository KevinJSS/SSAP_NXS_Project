<main data-view-id="12" class="main">
  <div class="header">
    <div class="header__content">
      <div class="header__heading">
        <p class="header__subtitle">GESTIÃ“N DE USUARIOS</p>
        <h1 class="header__title">LISTA DE ADMINISTRADORES</h1>
      </div>
      
      <div class="header__actions">
        <div class="header__actions header__actions--tablet">
          <%= link_to new_user_registration_path(:role => "admin"), class: "button-primary" do %>
            <%= image_tag('add-icon.svg', alt: "icono agregar administrador", class: "sidebar__icon") %>
            <span class="ms-1">Agregar administrador</span>
          <% end %>
        </div>
      
        <%= render 'shared/sidebar_button' %>
      </div>
    </div>

    <div class="header__actions header__actions--phone">
      <%= link_to new_user_registration_path(:role => "admin"), class: "button-primary" do %>
        <%= image_tag('add-icon.svg', alt: "icono agregar administrador", class: "sidebar__icon") %>
        <span class="ms-1">Agregar administrador</span>
      <% end %>
    </div>
  </div>

  <%= render 'user_filters' %>

  <section class="card-list mb-4">
    <h4 class="card-list__title">
      <%= image_tag('card-list-icon.svg', alt: "icon lista de administradores") %>
      ADMINISTRADORES
    </h4>

    <div id="users" class="card-list__items">
      <% @users.each do |user| %>
        <%= render user %>
      <% end %>
    </div>

    <div class="card-list__pagination">
      <%= render "shared/pagination_count", object: @users %>
      <%= will_paginate @users, inner_window: 1 %>
    </div>
  </section>
</main>