<section class="filters" data-controller="filters">
    <div class="filters__header">
        <a class="filters__toggle" data-action="click->filters#toggle">
            <h4 class="filters__title">
                <%= image_tag("filter-icon.svg", alt: "icono seccion filtros", class: "sidebar__icon") %>FILTROS
            </h4>
            <span id="toggle" data-name="<%= data_name %>"><i class="bi bi-caret-down-fill"></i></span>
        </a>
    </div>

    <div class="filters__content">
        <div class="card card-body border-0 p-0 pt-3">
            <%= search_form_for resource, url: resource_path, class: "form" do |f| %>
                <div class="form__grid">
                    <div class="form__field">
                        <%= f.label :id_card_cont, "Número de cédula", class: "form__label" %>
                        <%= f.text_field :id_card_cont, class: "form__input", placeholder: "Número de cédula" %>
                    </div>

                    <div class="form__field">
                        <%= f.label :fullname_cont, "Nombre del usuario", class: "form__label" %>
                        <%= f.text_field :fullname_cont, class: "form__input", placeholder: "Nombre del usuario" %>
                    </div>

                    <div class="form__field">
                        <%= f.label :job_position_cont, "Puesto de trabajo", class: "form__label" %>
                        <%= f.text_field :job_position_cont, class: "form__input", placeholder: "Puesto de trabajo" %>
                    </div>
                    
                    <div class="form__field">
                        <%= f.label :status_eq, 'Estado del usuario', class: "form__label" %>
                        <%= f.select :status_eq, [['Activo(a)', true], ['Inactivo(a)', false]], {prompt: "- Selecciona un estado -"}, class: "form__input form-select" %>
                    </div>
                </div>

                <div class="form__action">
                    <button type="submit" class="button-primary">
                        <i class="bi bi-search me-2"></i>
                        Buscar
                    </button>
                </div>
            <% end %>
        </div>
    </div>
</section>